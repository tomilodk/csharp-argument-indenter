{
    "name": "csharp-argument-indenter",
    "displayName": "C# Argument Indenter",
    "description": "Format C# method arguments with proper indentation",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.60.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tomilodk/csharp-argument-indenter"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:csharp"
    ],
    "publisher": "tomilodk",
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#512BD4",
        "theme": "dark"
    },
    "license": "MIT",
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "csharp-argument-formatter.formatArguments",
                "title": "Indent Method Arguments"
            }
        ],
        "keybindings": [
            {
                "command": "csharp-argument-indenter.indentArguments",
                "key": "ctrl+[Backquote]",
                "mac": "ctrl+[Backquote]",
                "when": "editorTextFocus && editorLangId == 'csharp'"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "build-and-install": "vsce package && code --install-extension csharp-argument-indenter-1.0.0.vsix"
    },
    "devDependencies": {
        "@types/node": "^14.x.x",
        "@types/vscode": "^1.60.0",
        "typescript": "^4.x.x"
    }
}
